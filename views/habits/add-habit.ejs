<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
    .icons-container{
    display:flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    opacity:0;
    pointer-events:none ;
    top: 0;
    left:0;
    height:100vh;
    width:100vw;

}

.model{
    border-radius: 5px;
    border: 2px solid black;
    padding: 20px;
    width:600px;
    text-align: center;
    background-color:white;
    font-size: 20px;
}

.icons-container.show {
    pointer-events:auto;
    opacity: 1;
}
.chosen{
    border: 2px solid black;
}
    </style>
</head>
<body>
    <h1>add a habit</h1>
    <form action="/habits/new" method="post">
        <label for="name">habit:</label>
        <input id="name" name="name" type="text">

        <label for="reason">why do you want to do this?</label>
        <input id="reason" name="reason" type="text">

        <input type="hidden" name="icon" id="iconInput">
            
            <button id ="showIcons">icon</button>


        <button>add habit</button>
    </form>
    <div class="icons-container" id="icons-container">
    <div class="model">
        <h1>choose an icon</h1>
        <div id="icons-area"></div>
        
        <button id="close">confirm</button>
        </div>
    </div>
        
        

    <script>
        // const iconsContainer = document.querySelector('.icons-container')
        const showIcons = document.querySelector('#showIcons')
        const iconsClose = document.querySelector('#close')
        const container = document.querySelector('#icons-container')
                const iconsArea = document.querySelector('#icons-area')
        const icons = ["1.png", "2.png", "3.png", "4.png", "5.png", "7.png", "8.png", "9.png", "10.png", "11.png", "12.png", "13.png", "14.png", "15.png"]
        let chosenIcon

    icons.forEach ((oneIcon) => {
        const img = document.createElement('img')
        img.src = `/images/${oneIcon}`
        img.width = 60
        img.height = 60
        img.style.margin = "10px"
        img.addEventListener('click',()=> {
            img.classList.toggle("chosen")
            chosenIcon = oneIcon

                document.getElementById("iconInput").value = chosenIcon;
        })
        iconsArea.appendChild(img)
    })

        showIcons.addEventListener('click', () => {
        container.classList.add('show') 
    })
    iconsClose.addEventListener('click', () => {
        container.classList.remove('show') 
    })
    </script>
</body>
</html>