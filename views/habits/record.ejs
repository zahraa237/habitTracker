<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 20px;
    }

.month-days {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
  margin-top: 10px;
}

.day {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: #333;
  transition: background-color 0.3s;
}

.day:hover {
  background-color: #4caf50;
  color: white;
  cursor: pointer;
}

    </style>
</head>
<body>

  <div class="habits-container">
  <% records.forEach(habit => { %>
    <div class="habit">
      <div class="habit-header">
        <img src="/images/<%= habit.icon %>" alt="icon" class="habit-icon">
        <div class="habit-name"><%= habit.name %></div>
      </div>

      <div class="month-days">
        <% habit.days.forEach((day, index) => { %>
          <div class="day" title="<%= day.date %>">
            <%= day.isChecked ? "â­" : index + 1 %>
          </div>
        <% }) %>
      </div>
    </div>
  <% }) %>
</div>


</body>
</html>